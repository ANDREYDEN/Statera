    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter: emulate",
            "type": "dart",
            "request": "launch",
            "args": [
                "--dart-define=MODE=debug"
            ],
        },
        {
            "name": "Flutter: Run all Tests",
            "type": "dart",
            "request": "launch",
            "program": "./test/"
        },
        {
            "name": "Flutter: production",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "Run Functions Tests",
            "request": "launch",
            "type": "node",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/.bin/jest",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}